<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/sensorConfig_activateOnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sensorConfig_activateOnStart" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:columnCount="3"
            android:padding="2dip" >

            <TextView
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:text="@string/sensorConfig_joystickXEmulation" />

            <Spinner
                android:id="@+id/sensorConfig_sensorX"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:entries="@array/sensorConfig_axis_entries" />

            <EditText
                android:id="@+id/sensorConfig_customX"
                android:layout_gravity="fill"
                android:inputType="text|textNoSuggestions"
                android:maxLength="4" />

            <TextView
                android:layout_columnSpan="2"
                android:layout_gravity="center|right"
                android:text="@string/sensorConfig_angle" />

            <EditText
                android:id="@+id/sensorConfig_angleX"
                android:layout_gravity="fill"
                android:inputType="numberSigned|numberDecimal" />

            <CheckBox
                android:id="@+id/sensorConfig_invertX"
                android:layout_gravity="fill"
                android:layout_marginRight="5dip"
                android:text="@string/sensorConfig_invertAxis" />

            <TextView
                android:layout_gravity="center|right"
                android:text="@string/menuItem_sensitivity" />

            <Button
                android:id="@+id/sensorConfig_sensitivityX"
                android:layout_gravity="fill" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:columnCount="3"
            android:padding="2dip" >

            <TextView
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:text="@string/sensorConfig_joystickYEmulation" />

            <Spinner
                android:id="@+id/sensorConfig_sensorY"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:entries="@array/sensorConfig_axis_entries" />

            <EditText
                android:id="@+id/sensorConfig_customY"
                android:layout_gravity="fill"
                android:inputType="text|textNoSuggestions"
                android:maxLength="4" />

            <TextView
                android:layout_columnSpan="2"
                android:layout_gravity="center|right"
                android:text="@string/sensorConfig_angle" />

            <EditText
                android:id="@+id/sensorConfig_angleY"
                android:layout_gravity="fill"
                android:inputType="numberSigned|numberDecimal" />

            <CheckBox
                android:id="@+id/sensorConfig_invertY"
                android:layout_gravity="fill"
                android:layout_marginRight="5dip"
                android:text="@string/sensorConfig_invertAxis" />

            <TextView
                android:layout_gravity="center|right"
                android:text="@string/menuItem_sensitivity" />

            <Button
                android:id="@+id/sensorConfig_sensitivityY"
                android:layout_gravity="fill" />
        </GridLayout>
    </LinearLayout>

</ScrollView>